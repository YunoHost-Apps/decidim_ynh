{
    "name": "Decidim",
    "id": "decidim",
    "packaging_format": 1,
    "description": {
        "en": "Participatory democracy framework,"
    },
    "version": "0.27.2~ynh1",
    "url": "https://decidim.org/",
    "upstream": {
        "license": "AGPL-3.0-or-later",
        "website": "https://decidim.org/",
        "demo": "https://decidim.org/demo/",
        "admindoc": "https://docs.decidim.org",
        "code": "https://github.com/decidim/decidim"
    },
    "license": "AGPL-3.0-or-later",
    "maintainer": {
        "name": "",
        "email": ""
    },
    "requirements": {
        "yunohost": ">= 4.3.0"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": [
                    "ca",
                    "cs",
                    "de",
                    "en",
                    "es",
                    "eu",
                    "fi",
                    "fr",
                    "it",
                    "ja",
                    "nl",
                    "pl",
                    "pt",
                    "ro"
                ],
                "default": "en"
            },
            {
                "name": "admin",
                "type": "user"
            },
            {
                "name": "password",
                "type": "password"
            }
        ]
    }
}
